<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.LoginView"
             x:DataType="vm:LoginViewModel"
             Title="Login">

	<VerticalStackLayout Padding="20" Spacing="10">
		<Label Text="Login" FontSize="24" HorizontalOptions="Center" />
		<Entry Placeholder="E-mailadres" Text="{Binding Email}" Keyboard="Email" />
		<Entry Placeholder="Wachtwoord" Text="{Binding Password}" IsPassword="True" />
		<Button Text="Login" Command="{Binding LoginCommand}" />
		<Button Text="Registreer" Command="{Binding RegisterCommand}" />
		<Label Text="{Binding LoginMessage}" TextColor="Red" FontSize="14" />
	</VerticalStackLayout>
</ContentPage>
